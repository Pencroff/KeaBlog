@using Webdiyer.WebControls.Mvc
@model KeaBlog.Areas.Admin.Models.CategoryListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Categories list</h2>

<p>
   <a class="btn btn-info btn-mini" data-toggle="modal" href="#createCategory">Create category</a>
</p>
<table class="table table-striped table-bordered table-fix">
    <thead>
        <tr>
            <th style="width: 30%">
                Category name
            </th>
            <th style="width: auto">
                Description
            </th>
            <th style="width: 10%">
                Action
            </th>
        </tr>        
    </thead>
    <tbody>
        @foreach (var item in Model.Categories) {
            <tr id='@item.Id'>
                <td name="Name">@Html.DisplayFor(modelItem => item.Name)</td>
                <td name="Description">@Html.DisplayFor(modelItem => item.Description)</td>
                <td style="text-align: center">
                    <a class="btn btn-primary btn-mini editCategory" name="@item.Id">Edit</a>&nbsp;&nbsp;
                    <a class="btn btn-danger btn-mini deleteCategory" name="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination">
    @Html.Pager(Model.Categories, new PagerOptions
                                        {
                                            PageIndexParameterName = "page",
                                            NumericPagerItemCount = 10,
                                            AlwaysShowFirstLastPageNumber = true,
                                            PagerItemWrapperFormatString = "<li>{0}</li>",
                                            CurrentPagerItemWrapperFormatString = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
                                            NumericPagerItemWrapperFormatString = "<li>{0}</li>",
                                            ContainerTagName = "ul",
                                            ShowFirstLast = false,
                                            SeparatorHtml = "",
                                            PrevPageText = "&larr;",
                                            NextPageText = "&rarr;"
                                        })   
</div>
<form action='@Url.Action("Create", "Category", new{Area="Admin"})' class="modal hide fade" id="createCategory" method="post" novalidate="novalidate">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>Create category</h3>
    </div>
    <div class="modal-body">
        <label>Category name</label>
        <input type="text" name="Name" placeholder="Type category name…" />
        <span class="help-block">Max length 256 letters</span>
        <label>Category description</label>
        <input type="text" name="Description" placeholder="Type description of category…" />
        <span class="help-block">Description of category</span>
    </div>
    <div class="modal-footer">
        <a href="" class="btn" data-dismiss="modal">Close</a>
        <input type="submit" value="Create" class="btn btn-info">
    </div>
</form>
<form action='@Url.Action("Edit", "Category", new{Area="Admin"})' class="modal hide fade" id="editCategory" method="post" novalidate="novalidate">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>Edit category</h3>
    </div>
    <div class="modal-body">
        <input name="Id" type="hidden" value="0">
        <label>Category name</label>
        <input type="text" name="Name" placeholder="Type category name…" />
        <span class="help-block">Max length 256 letters</span>
        <label>Category description</label>
        <input type="text" name="Description" placeholder="Type description of category…" />
        <span class="help-block">Description of category</span>
    </div>
    <div class="modal-footer">
        <a href="" class="btn" data-dismiss="modal">Close</a>
        <input type="submit" value="Save" class="btn btn-info">
    </div>
</form>
<div class="modal hide" id="deleteCategory">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>Delete category</h3>
    </div>
    <div class="modal-body">
        <p>One fine body…</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <a href="#" class="btn btn-primary">Save changes</a>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $('#createCategory').modal({ keyboard: false, show: false });
        $('#editCategory').modal({ keyboard: false, show: false });
        $('#deleteCategory').modal({ keyboard: false, show: false });
        $('.editCategory').click(function () {
            var data = $('tr#' + this.name),
                name = $('tr#' + this.name + ' td[name="Name"]').text(),
                description = $('tr#' + this.name + ' td[name="Description"]').text();
            $('#editCategory input[name="Id"]').val(this.name);
            $('#editCategory input[name="Name"]').val(name);
            $('#editCategory input[name="Description"]').val(description);
            $('#editCategory').modal('show');
        });
    </script>
}
