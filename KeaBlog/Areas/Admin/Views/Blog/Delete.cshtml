@model KeaBlog.Areas.Admin.Models.PostViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="page-header">
    <h2>Delete @Model.Title <br/>
    <small>Do you want to delete this post?</small></h2>
</div>

<div class="row">
    <div class="span6">
        <h4>Title</h4>
        <div class="well well-small">
            @Html.DisplayFor(model => model.Title)
        </div>
    </div>
    <div class="span6">
        <h4>Friendly Url</h4>
        <div class="well well-small">
            @Html.DisplayFor(model => model.PostUrl)
        </div>
    </div>
</div>
<div class="row">
    <div class="span12">
        <h4>Content</h4>
        <div class="well well-small contentBB">@Html.DisplayFor(model => model.FullContent)</div>
    </div>
</div>
<div class="row">
    <div class="span1">
        <h4>Visible</h4>
        <div class="well well-small">
            @if (Model.Visible)
            {
                <i class="icon-ok"></i>   
            }
            else
            {
                <i class="icon-remove"></i>
            }
        </div>
    </div>
    <div class="span2">
        <h4>Publish in</h4>
        <div class="well well-small">
            @Model.GetModifiedDate()&nbsp;@Model.GetModifiedTime()
        </div>
    </div>
    <div class="span6">
        <h4>Category</h4>
        <div class="well well-small">
            @Model.CategoryName
        </div>
    </div>
    <div class="span3">
        <h4>Author</h4>
        <div class="well well-small">
            @Html.DisplayFor(model => model.AuthorName)
        </div>
    </div>
</div>
<div class="row">
    <div class="span6">
        <h4>Title link to original</h4>
        <div class="well well-small">
            @Model.OriginalTitle
        </div>
    </div>
    <div class="span6">
        <h4>Link to original</h4>
        <div class="well well-small">
            @Model.LinkToOriginal
        </div>
    </div>
</div>
<div class="row">
    <div class="span6">
        <h4>SEO Description</h4>
        <div class="well well-small">
            @Model.SEODescription
        </div>
    </div>
    <div class="span6">
        <h4>SEO keywords</h4>
        <div class="well well-small">
            @Model.SEOKeywords
        </div>
    </div>
</div>
@using (Html.BeginForm()) {
    <p>
        <a href='@Url.Action( "Index", "Blog")' class = "btn btn-info"><i class="icon-arrow-left icon-white"></i> back to list</a>
        <input type="submit" value="Delete" class = "btn btn-danger pull-right"/>
    </p>
}
@section scripts {
     @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/wysibb.render")
    <script>
        $(document).ready(function () {
            var viewElement = $('.contentBB'),
                bbHtml = viewElement.html(),
                html;
            wysibb.options.themePrefix = '/Content/WysiBB/themes';
            html = wysibb.render(bbHtml);
            viewElement.html(html);
            $('body').append(wysibb.helpers.wbbStringFormat('<link rel="stylesheet" type="text/css" media="all" href="{themePrefix}/{themeName}/theme.css" />', wysibb.options))
        });
    </script>
}