@model IEnumerable<KeaBlog.Areas.Admin.Models.PostViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Posts list</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Blog", new { @class = "btn btn-info btn-mini" })
</p>
<table class="table table-striped table-bordered table-fix">
    <thead>
        <tr>
            <th style="width: 4%; text-align: center;">
                <i class="icon-bookmark"></i>
            </th>
            <th style="width: auto">
                Post title
            </th>
            <th style="width: 3%; text-align: center;">
                <i class="icon-eye-open"></i>
            </th>
            <th style="width: 12%">
                Modified
            </th>
            <th style="width: 8%">
                Author
            </th>
            <th style="width: 15%">
                Action
            </th>
        </tr>        
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td style="text-align: center">
                    @if (item.LinkToOriginal != null)
                    {
                        <a href="@item.LinkToOriginal" class="btn btn-mini" target="_blank"><i class="icon-share"></i></a>
                    } else
                    {
                        <a href="#" class="btn disabled btn-mini"><i class="icon-share"></i></a>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td style="text-align: center">
                    @if (item.Visible)
                    {
                        <i class="icon-ok"></i>   
                    }
                    else
                    {
                        <i class="icon-remove"></i>
                    }
                </td>
                <td>
                    @item.GetModifiedDate() @item.GetModifiedTime()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </td>
                <td style="text-align: center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-mini" })&nbsp;&nbsp;
                    @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-mini" })&nbsp;&nbsp;
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-mini" })
                </td>
            </tr>
        }
    </tbody>
</table>
