@using StackExchange.Profiling
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- Mobile viewport optimisation -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- (en) Add your meta data here -->
    @Styles.Render("~/Content/css/fonts")
    @Styles.Render("~/Content/css/bootstrap")
    @*ToDo Create less style to footer*@
    <style>
    @*  body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }*@
    @*html,body
    {
        height:100%;
    }
    .wrap
    {
        min-height: 100%; 
    }
    .main
    {
        overflow:auto;
        padding-bottom:160px; /* this needs to be bigger than footer height*/
    }
    .footer 
    {
        position: relative;
        margin-top: -80px; /* negative value of footer height */
        height: 80px;
        clear:both;
        padding-top:20px;
        color:#111;
        text-align: center;
        font-size: 2em;
    } *@

    html, body { height: 100%; }
    .wrapper { min-height: 100%; height: auto !important; height: 100%; margin: 0 auto -80px; }
    .footer, .push { height: 60px; }
    </style>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
    <body>
        <div class="wrapper">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container"> 
                        <a class="brand" href='@Url.Action("Index", "Home")'>Kea Blog</a>
                        @{ Html.RenderAction("MainMenu", "Extra"); }
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="span9">
                        @RenderBody()
                    </div>
                    <div class="span3">
                        <div class="well">
                            @RenderSection("featured", required: false)
                        </div>
                    </div>
                </div>
            </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
            @if (Request.IsLocal)
            {
                <span>
                    @MiniProfiler.RenderIncludes();
                </span>
            }
            <div class="push"></div>
        </div>
        <div class="footer well well-small">
            Footer
        </div>
    </body>
</html>
