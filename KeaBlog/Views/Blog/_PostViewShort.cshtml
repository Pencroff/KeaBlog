@using ServiceLib
@model KeaBlog.Areas.Admin.Models.PostViewModel

<div class="page-header">
    <h1>@Model.Title  @if(Model.CategoryId!=0)
                      {
                          <small>
                              <a href='@Url.Action("Category", "Blog", new { category = Model.CategoryName.ToTranslit().Slugify(), id = Model.CategoryId })'>
                                @Model.CategoryName
                              </a>
                          </small>
                      }</h1>
</div>
<div class="row">
    <div class="span9 well-small">
        <div class="row">
            <div class="span8">
                @if(Model.SelectedTags.Count!=0)
                {
                    <span class="label label-success"><i class="icon-tag icon-white"></i></span>
                    foreach (var tag in Model.Tags)
                    {
                        <a href='@Url.Action("Tag", "Blog", new { tag = tag.Name.ToTranslit().Slugify(), id = tag.Id })' class="btn btn-mini btn-success">@tag.Name</a>
                    }
                }    
            </div>
            <div class="span1">
                <strong>@Model.GetModifiedDate()</strong>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="span9 contentBB">@Model.GetCutContent()</div>
</div>
<div class="row">
    <div class="offset7 span2 well-small"><a class="btn btn-success pull-right" href='@Url.Action("Post", "Blog", new { date = Model.GetModifiedDateUrl(), url = Model.PostUrl})'>Read post fully &rarr;</a></div>
</div>



